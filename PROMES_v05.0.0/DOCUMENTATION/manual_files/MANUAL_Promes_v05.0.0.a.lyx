\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

else %for 'spl_tmi','cheb_tmi','smol_tmi':     
\end_layout

\begin_layout Plain Layout

 	
\end_layout

\begin_layout Plain Layout

  %Pol.
 variables in columns of POL.YY for 'tmi':     
\end_layout

\begin_layout Plain Layout

