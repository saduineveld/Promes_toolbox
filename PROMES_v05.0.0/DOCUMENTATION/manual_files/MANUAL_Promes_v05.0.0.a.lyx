\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\min_{\theta} & \sum_{i=1}^{q}R\left(x_{i};\theta\right)^{2}\label{eq:MSE_obj_mono}
\end{align}

\end_inset


\end_layout

